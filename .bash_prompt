#!/bin/bash

[[ -f ~/git-prompt.sh ]] && . ~/git-prompt.sh

if [[ ${EUID} == 0 ]] ; then
  PS1='\[\033[01;31m\][\h\[\033[01;36m\] \W\[\033[01;31m\]]\$\[\033[00m\] '
else
  PS1='▋\[\033[01;36m\] \A \[\033[01;32;44m\] \u \[\033[00m\]\[\033[01;37m\]▋ \W\[\033[01;32m\] \[\033[01;36m\]$(__git_ps1 "─ %s ")\[\033[32;44m\]❱\[\033[00m\] '
fi
